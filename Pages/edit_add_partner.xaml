<Window x:Class="for_new_сriteria.Pages.edit_add_partner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:for_new_сriteria.Pages"
        mc:Ignorable="d"
        Title="{Binding Title}" Closing="Window_Closing">
    <Grid Height="500" Width="700">
     
        <StackPanel Width="450">
            <Label HorizontalAlignment="Center" >Окно редактирования / добавления данных </Label> 
            
            
            <TextBlock Text="Название:"/>
            <TextBox x:Name="txtName" />

            <TextBlock Text="Тип:"/> 
            <TextBox x:Name="txtType"/>

            <TextBlock Text="Адресс:"/>
            <TextBox x:Name="txtadress"/>

            <TextBlock Text="INN:"/>
            <TextBox x:Name="txtINN"/>

            <TextBlock Text="Рейтинг:"/>
            <TextBox x:Name="txtrating"/>

            <TextBlock Text="ФИО директора:"/>
            <TextBox x:Name="txtFio" /> 
            
            <TextBlock Text="Email директора:"/>
            <TextBox x:Name="txtemail" /> 
            
            <TextBlock Text="Password директора:"/>
            <TextBox x:Name="txtpas" /> 
            
            <TextBlock Text="Телефон директора:"/>
            <TextBox x:Name="txtphone" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSave" Content="Сохранить" Width="100" 
                        Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Отмена" Width="100" 
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
